gemspec

group :development do
  gem 'rake', '~> 13.0'
  gem 'rubocop', require: false
  gem 'rubocop-minitest', require: false
  gem 'rubocop-performance', require: false
  gem 'rubocop-rake', require: false
  gem 'yard', require: false
end

group :test do
  gem 'minitest'
  gem 'simplecov'
  gem 'simplecov-cobertura'
end
